[commit]
	template = /home/i860660/.gitmessage.txt
[grep]
	extendRegexp = true
	lineNumber = true
[alias]
	g  = grep --break --heading --line-number
  w  = rebase --whitespace=fix HEAD~1
  s  = status
  rb = "!f() { git rebase -i HEAD~$1; }; f"
  co = "checkout"
  cb = "!f() { git checkout master && git pull upstream master && git push origin master && git checkout -b $1; }; f"
  po = "push origin"
  lmao = "!f() { git add . ; git commit -m lmao;}; f"
  d = "diff"
[color "grep"]
	linenumber = yellow bold
	match = red
  filename = magenta
[core]
	autocrlf = input
	eol = lf
